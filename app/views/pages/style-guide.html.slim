/* --------- Buttons --------*/
hr
.wrap
  h1 Buttons
  .col-4
    h3 Large button
    p
      a.largebtn href="#" Large Button
    p
      |user mixin <i>large-button</i> to pass in the color value.
    p
      a.largebtn-outline href="#" Large Button
    p
      |user mixin <i>large-button-outline</i> to pass in the color value.
  .col-4
    h3 Small button
    p
      a.smallbtn href="#" Small Button
    p
      |user mixin <i>small-button</i> to pass in the color value.
    p
      a.smallbtn-outline href="#" Small Button
    p
      |user mixin <i>small-button-outline</i> to pass in the color value.
  .col-4
    h3 Full width button
    p
      a.largebtn.fullwidth href="#" Full width Button
    p
      a.largebtn-outline.fullwidth href="#" Full width Button
    p
      |simply add class .fullwidth

