/* --------- GRID --------*/
hr
.wrap
  h1
    | Grid system based on&nbsp;
    a href="http://neat.bourbon.io/" target="_blank"
      |Neat
  p $max-width: em(1088)
  p $grid-columns: 12
  p $column: em(68)
  p $gutter: em(25)

/* --------- COLOR --------*/

hr
.wrap
  h1 Color
  div.col-4
    h3 Theme Color
    div
      div.colorpad
        div.themecolor
        p.themecolor DF3F3F
      div.colorpad
        div.themecolor-dark
        p.themecolor-dark AC0C0C Darken 20% 
  div.col-4
    h3 Secondary Color
    div
      div.colorpad
        div.secondarycolor
        p.secondarycolor FD984E
      div.colorpad
        div.secondarycolor-dark
        p.secondarycolor-dark CA651B Darken 20% 
  div.col-4
    h3 Third Color
    div
      div.colorpad
        div.thirdcolor
        p.thirdcolor 6DBCDB
      div.colorpad
        div.thirdcolor-dark
        p.thirdcolor-dark 3A89A8 Darken 20% 
  div.col-4
    h3 Dark Color
    div
      div.colorpad
        div.darkcolor
        p.darkcolor 4D4D4D
      div.colorpad
        div.darkcolor-dark
        p.darkcolor-dark 1A1A1A Darken 20%
  div.col-4
    h3 Light Color
    div
      div.colorpad
        div.lightcolor
        p.lightcolor F2F2F2
      div.colorpad
        div.lightcolor-dark
        p.lightcolor-dark BFBFBF Darken 20%

